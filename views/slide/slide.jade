extends ../layout

block content
  .container
    .col-lg-12
      h2 #{row.title}
      #slide-player
        .thumbnail
          each slide, idx in row.slides
            if idx === 0
              img(class="slide slide-#{idx}", src="#{slide}", data-page="#{idx}")
            else
              img(class="slide slide-#{idx}", src="#{slide}", data-page="#{idx}", style="display: none;")
          .caption
            ul.pager
              li
                a#prev(href="#") Previous
              li
                a#next(href="#") Next
      p
        span author
        .well.well-sm
          | #{row.author}

      p
        span keyword
        .well.well-sm
          | #{row.keyword}

      p
        span description
        .well.well-lg
          | #{row.description}
